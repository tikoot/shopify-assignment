.home_section {
  background: #F5FDFF;
  padding: 13px 14px 28px 13px;
}


.home_header_wrapper {
  display: flex;
  align-items: end;
}

.home_header {
  font-family: 'Mont-Bold';
  color: #11346F;
}

.home_header span {
  color: #197AFF;
  font-family: 'Black';
}

.home-main_content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding-top: 25px;
}



.home-img_wrapper img {
  display: none;
}

.home_header_wrap_img {
  width: 174px;
  height: 107px;
}

.home_header_wrap {
  display: flex;
  align-items: center;
}

.content_text {
  font-size: 14px;
  text-align: center;
  color: #262626;
  max-width: 730px;
  padding-bottom: 25px;
  line-height: 28px;
}

.cards {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 21px;

}

.each_card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-right: 15px;
}

.each_card:last-child {
  border: none;
}

.each_card_header {
  font-family: 'Mont-Black';
  padding-top: 15px;
  font-size: 14px;
  line-height: 20px;
  text-align: center;
  color: #11346F;
}

.card_list {
  display: none;
}

.buttons_section {
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: space-between;
}

.get_now_btn {
  white-space: nowrap;
  font-weight: 900;
  font-size: 18px;
  text-align: center;
  color: #FFFFFF;
  background: #197AFF;
  border-radius: 60px;
  border: none;
  padding: 19px 57px;
  margin-bottom: 18px
}

.bundle_btn {
  white-space: nowrap;
  font-weight: 900;
  padding: 10px 28px;
  background: rgba(77, 145, 207, 0.15);
  border-radius: 30px;
  font-size: 15px;
  border: none;
  margin-bottom: 15px;
}

.bundle_btn span {
  font-weight: 900;
  color: #197AFF;
}

.home_buttons {
  display: flex;
  flex-direction: column;
  align-items: center;
  max-width: fit-content;
}

.user_comment {
  display: flex;
  align-items: center;
  background: rgba(234, 242, 255, 0.1);
  border: 1px solid rgba(174, 204, 255, 0.5);
  border-radius: 110px;
  max-height: 81px;

}

.user_comment_wrapper {
  display: flex;
  align-items: center;
  padding: 8px 32px 8px 11px;
}

.user_img {
  width: 64px;
  height: 64px;
  border-radius: 50%;
}

.user_comment_txt {
  max-width: 222px;
  font-size: 12px;
  font-family: 'Mont-Bold';
  font-weight: 700;
}

.rating_wrapper {
  display: flex;
  align-items: center;
}

.rating_wrapper p {
  font-size: 12px;
  padding-left: 5px;
  color: #787979;
}

.verify {
  padding-left: 33px;
  display: flex;
  align-items: center;
}

.verify p {
  font-family: 'Mont-Bold';
  font-size: 11px;
  color: #197AFF;
}

.comment_content-wrapper {
  padding-left: 16px;
}


@media(min-width: 400px) {}


@media(min-width: 600px) {
  .home_section {
    padding: 63px 100px 52px;
  }

  .home_header {
    font-size: 42px;
  }

  .home-img_wrapper img {
    display: block;
    width: 391px;
    height: 241px;
  }

  .home-main_content {
    flex-direction: row;
  }

  .home_header_wrap_img {
    display: none;
  }

  .home_section {
    background: #FFF;
  }

  .card_list {
    display: block;
    font-family: 'Mont-Bold';
    font-weight: 600;
    list-style-type: none;
    align-items: center;
    text-align: center;
    font-size: 12px;
    line-height: 20px;
    margin: 0;
    padding: 0;
  }

  .each_card {
    border-right: 1px solid #CEE2FF;

  }

  .cards {
    padding: 17px 15px;
    margin-bottom: 52px;
    background: rgba(174, 204, 255, 0.1);
    border: 1px solid rgba(174, 204, 255, 0.5);
    border-radius: 10px;
  }

  .content_text {
    font-size: 18px;
    font-weight: 700;

  }

  .buttons_section {
    flex-direction: row;
    align-items: flex-end;
  }

  .bundle_btn {
    margin-bottom: 0;
  }

  .vector {
    position: absolute;
    left: 850px;
  }
}


@media(min-width: 960px) {}